@model Application.ViewModels.PrestamoViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="row justify-content-center text-white p-2 rounded-2 bg-primary">
    <div class="col-12">
        <h1 class="text-center text-white">Calculadora de Préstamos Personales</h1>
        <h4 class="text-center text-white">Completa los campos requeridos para visualizar los montos a pagar</h4>
    </div>
    <div class="col-6 justify-content-center m-2 p-2">
        <form method="post" asp-controller="C_Prestamos" asp-action="Result">
            <div class="mb-3">
                <label asp-for="Monto" class="form-label">Monto del Préstamo:</label>
                <input asp-for="Monto" type="text" min="0" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="TipoPrestamo" class="form-label">Tipo de Préstamo:</label>
                <select id="TipoPrestamo" asp-for="TipoPrestamo" class="form-select" onclick="llenarInteres()">
                    <option value="1">Personal</option>
                    <option value="2">Automóvil</option>
                    <option value="3">Hipotecario</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="TasaInteres" class="form-label">Tasa de Interes %</label>
                <input id="interes" asp-for="TasaInteres" type="text" value="22" readonly class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Meses" class="form-label">Cantidad de Meses a Pagar:</label>
                <select asp-for="Meses" class="form-select">
                    <option value="12">12 Meses</option>
                    <option value="18">18 Meses</option>
                    <option value="24">24 Meses</option>
                    <option value="30">30 Meses</option>
                    <option value="36">36 Meses</option>
                    <option value="42">42 Meses</option>
                    <option value="48">48 Meses</option>
                    <option value="54">54 Meses</option>
                    <option value="60">60 Meses</option>
                    <option value="66">66 Meses</option>
                    <option value="72">72 Meses</option>
                    <option value="78">78 Meses</option>
                    <option value="84">84 Meses</option>
                    <option value="90">90 Meses</option>
                    <option value="96">96 Meses</option>
                    <option value="102">102 Meses</option>
                    <option value="108">108 Meses</option>
                    <option value="114">114 Meses</option>
                    <option value="120">120 Meses</option>
                </select>
            </div>
            <div class="row justify-content-center">
                <button style="background-color: rgb(38 42 88 / 0.46)" type="submit" class="btn col-6 text-white">Calcular</button>
            </div>
        </form>
    </div>
</div>
